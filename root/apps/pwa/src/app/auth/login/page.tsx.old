'use client';

import React, { useEffect, useState } from 'react';
import { useRouter, useSearchParams } from 'next/navigation';
import { Sprout, AlertCircle, Phone, Building2, ArrowRight, Loader2 } from 'lucide-react';
import { authService } from '@/lib/auth/auth-service';

type Role = 'farmer' | 'buyer' | 'fpo' | 'admin';
type AuthMethod = 'phone' | 'email';

export default function LoginPage() {
  const router = useRouter();
  const searchParams = useSearchParams();

  const initialRole = (searchParams.get('role') as Role) || 'farmer';
  const [role, setRole] = useState<Role>(initialRole);
  const [authMethod, setAuthMethod] = useState<AuthMethod>('phone');
  const [phone, setPhone] = useState('');
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState('');
  const [otpSent, setOtpSent] = useState(false);
  const [otp, setOtp] = useState('');

  useEffect(() => {
    setRole(initialRole);
    // FPO and Admin use email/password by default
    setAuthMethod(['fpo', 'admin'].includes(initialRole) ? 'email' : 'phone');
  }, [initialRole]);

  const handleSendOtp = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');

    if (!phone || phone.length < 10) {
      setError('Please enter a valid 10-digit mobile number.');
      return;
    }

    setIsLoading(true);
    try {
      const { error, otpSent: sent } = await authService.signInWithPhone(`+91${phone}`);
      
      if (error) {
        setError(error);
      } else if (sent) {
        setOtpSent(true);
        if (typeof window !== 'undefined') {
          localStorage.setItem('kh_phone', phone);
          localStorage.setItem('kh_role', role);
        }
      }
    } catch (err: any) {
      console.error('OTP send error:', err);
      setError(err.message || 'Failed to send OTP. Please try again.');
    } finally {
      setIsLoading(false);
    }
  };

  const handleVerifyOtp = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');

    if (otp.length !== 6) {
      setError('Please enter a valid 6-digit OTP.');
      return;
    }

    setIsLoading(true);
    try {
      const { error, user } = await authService.verifyOtp(`+91${phone}`, otp);
      
      if (error) {
        setError(error);
      } else if (user) {
        if (typeof window !== 'undefined') {
          localStorage.setItem('kh_user_id', user.id);
        }
        
        // Get profile and redirect based on role
        const profile = await authService.getProfile(user.id);
        
        if (profile?.onboarded) {
          router.push(getRoleHomePath(profile.user_type));
        } else {
          router.push(getRoleOnboardingPath(role));
        }
      }
    } catch (err: any) {
      console.error('OTP verify error:', err);
      setError(err.message || 'Invalid OTP. Please try again.');
    } finally {
      setIsLoading(false);
    }
  };

  const handleEmailLogin = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');

    if (!email || !password) {
      setError('Please enter both email and password.');
      return;
    }

    setIsLoading(true);
    try {
      const { error, user } = await authService.signInWithEmail(email, password);
      
      if (error) {
        setError(error);
      } else if (user) {
        if (typeof window !== 'undefined') {
          localStorage.setItem('kh_user_id', user.id);
        }
        
        // Get profile and redirect
        const profile = await authService.getProfile(user.id);
        router.push(getRoleHomePath(profile?.user_type || role));
      }
    } catch (err: any) {
      console.error('Email login error:', err);
      setError(err.message || 'Login failed. Please try again.');
    } finally {
      setIsLoading(false);
    }
  };

  const getRoleHomePath = (userRole: Role): string => {
    switch (userRole) {
      case 'farmer': return '/';
      case 'buyer': return '/buyer/dashboard';
      case 'fpo': return '/fpo/dashboard';
      case 'admin': return '/admin';
      default: return '/';
    }
  };

  const getRoleOnboardingPath = (userRole: Role): string => {
    switch (userRole) {
      case 'farmer': return '/onboarding/farmer';
      case 'buyer': return '/onboarding/buyer';
      default: return '/';
    }
  };

  return (
    <div className="min-h-screen bg-slate-50 flex items-center justify-center px-4 py-8">
      <div className="w-full max-w-md">
        {/* Header */}
        <div className="text-center mb-8">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-emerald-600 rounded-2xl mb-4 shadow-sm">
            <Sprout className="w-8 h-8 text-white" />
          </div>
          <h1 className="text-3xl font-bold text-slate-900 mb-2">Krishi Hedge</h1>
          <p className="text-slate-600 text-sm">Forward Contract Platform for Oilseeds</p>
        </div>

        {/* Error Alert */}
        {error && (
          <div className="mb-4 bg-red-50 border border-red-200 rounded-lg p-4 flex items-start gap-3">
            <AlertCircle className="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" />
            <p className="text-sm text-red-800">{error}</p>
          </div>
        )}

        {/* Main Card */}
        <div className="bg-white rounded-xl shadow-sm border border-slate-200 p-6 space-y-6">
          {/* Role Selection */}
          <div>
            <label className="block text-sm font-medium text-slate-700 mb-3">Login as</label>
            <div className="grid grid-cols-2 gap-3">
              <button
                type="button"
                onClick={() => { setRole('farmer'); setAuthMethod('phone'); }}
                className={`p-4 rounded-lg border-2 transition-all ${
                  role === 'farmer'
                    ? 'border-emerald-600 bg-emerald-50 text-emerald-900'
                    : 'border-slate-200 hover:border-slate-300 text-slate-700'
                }`}
              >
                <Sprout className="w-5 h-5 mx-auto mb-1" />
                <div className="text-sm font-medium">Farmer</div>
              </button>
              <button
                type="button"
                onClick={() => { setRole('buyer'); setAuthMethod('phone'); }}
                className={`p-4 rounded-lg border-2 transition-all ${
                  role === 'buyer'
                    ? 'border-blue-600 bg-blue-50 text-blue-900'
                    : 'border-slate-200 hover:border-slate-300 text-slate-700'
                }`}
              >
                <Building2 className="w-5 h-5 mx-auto mb-1" />
                <div className="text-sm font-medium">Buyer</div>
              </button>
              <button
                type="button"
                onClick={() => { setRole('fpo'); setAuthMethod('email'); }}
                className={`p-4 rounded-lg border-2 transition-all ${
                  role === 'fpo'
                    ? 'border-amber-600 bg-amber-50 text-amber-900'
                    : 'border-slate-200 hover:border-slate-300 text-slate-700'
                }`}
              >
                <Building2 className="w-5 h-5 mx-auto mb-1" />
                <div className="text-sm font-medium">FPO</div>
              </button>
              <button
                type="button"
                onClick={() => { setRole('admin'); setAuthMethod('email'); }}
                className={`p-4 rounded-lg border-2 transition-all ${
                  role === 'admin'
                    ? 'border-purple-600 bg-purple-50 text-purple-900'
                    : 'border-slate-200 hover:border-slate-300 text-slate-700'
                }`}
              >
                <Building2 className="w-5 h-5 mx-auto mb-1" />
                <div className="text-sm font-medium">Admin</div>
              </button>
            </div>
          </div>

          {/* Phone OTP Form (for Farmer & Buyer) */}
          {authMethod === 'phone' && !otpSent && (
            <form onSubmit={handleSendOtp} className="space-y-4">
              <div>
                <label className="block text-sm font-medium text-slate-700 mb-2">
                  Mobile Number
                </label>
                <div className="flex items-center gap-2 px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus-within:border-emerald-500 focus-within:ring-2 focus-within:ring-emerald-500/20">
                  <Phone className="w-4 h-4 text-slate-400" />
                  <span className="text-slate-600 font-medium">+91</span>
                  <input
                    type="tel"
                    className="flex-1 bg-transparent outline-none text-slate-900"
                    placeholder="9876543210"
                    value={phone}
                    onChange={(e) => setPhone(e.target.value.replace(/\D/g, '').slice(0, 10))}
                    maxLength={10}
                  />
                </div>
              <p className="mt-1 text-[11px] text-gray-500">
                You will receive a one-time password (OTP) on this number.
              </p>
            </div>

            <button
              type="submit"
              disabled={isLoading}
              className="w-full bg-green-700 text-white py-3 rounded-xl font-semibold hover:bg-green-800 transition disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {isLoading ? 'Sending OTP...' : 'Send OTP'}
            </button>
          </form>
        </div>
      </div>
    </div>
  );
}
